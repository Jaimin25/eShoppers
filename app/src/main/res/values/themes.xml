<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cj_project_ecom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorNormal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Cj_project_ecom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.Cj_project_ecom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Cj_project_ecom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>